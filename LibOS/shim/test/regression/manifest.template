loader.preload = "file:../../src/libsysdb.so"
libos.entrypoint = "file:$(ENTRYPOINT)"
loader.env.LD_LIBRARY_PATH = "/lib:$(ARCH_LIBDIR):/usr/$(ARCH_LIBDIR)"
