sgx.trusted_files.libstdcxx = "file:/usr$(ARCH_LIBDIR)/libstdc++.so.6"

sgx.trusted_files.entrypoint = "file:$(ENTRYPOINT)"
sgx.trusted_files.exec_victim = "file:exec_victim"

