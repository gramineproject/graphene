pipeline {
        agent {
            label 'sgx_slave'
        }
        stages {
                stage('Build') {
                    steps {
                        sh '''
                            openssl genrsa -3 -out enclave-key.pem 3072
                            mv enclave-key.pem Pal/src/host/Linux-SGX/signer
                            ls Pal/src/host/Linux-SGX/signer
                            cd Pal/src
                            make SGX=1
                            cd host/Linux-SGX/sgx-driver
                            make
                            cd ../../../../LibOS
                            make
                        '''
                    }
                }
                stage('Test') {
                    steps {
                        sh '''
                            cd LibOS/shim/test/apps/python
                            ls
                            make SGX=1
                            make SGX_RUN=1
                            ls
                            ./python.manifest scripts/helloworld.py
                            ./python.manifest scripts/fibonacci.py
                        '''
                    }
                }
                stage('Deploy') {
                    steps {
                        sh 'echo Deploying code'
                    }
                }
        }
        post {
                success {
                        echo 'Deployment successful'
                }
                failure {
                        echo 'Failure while on the pipeline'
                }
                unstable {
                        echo 'Pipeline marked as "unstable"'
                }
        }
}
